<?xml version="1.0" encoding="utf-8"?>
<com.example.gl62m7rdx.sqlite_multi_database_test.view.holder.pods.ViewPodEmpty
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbl_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="@dimen/empty_favourite_text_padding"
        android:paddingRight="@dimen/empty_favourite_text_padding"
        android:textColor="@color/text_black_ish"
        android:textSize="@dimen/text_regular_2x" />

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cloud_off_black_24dp" />

</com.example.gl62m7rdx.sqlite_multi_database_test.view.holder.pods.ViewPodEmpty>